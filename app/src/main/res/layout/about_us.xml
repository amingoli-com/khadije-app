<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/drawerLayout_about"
android:fitsSystemWindows="true"
tools:openDrawer="start">


    <LinearLayout
        android:id="@+id/mother_about_us"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:background="#3F51B5"
            app:titleTextColor="#fff"
            android:id="@+id/toolbar_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:stretchColumns="1">

                <ProgressBar
                    android:id="@+id/progress_about"
                    android:layout_gravity="center"
                    android:indeterminateDrawable="@drawable/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:padding="15dp"
                    android:id="@+id/about_desc"
                    android:text=""
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>


            </TableLayout>

        </ScrollView>

    </LinearLayout>

<android.support.design.widget.NavigationView
    android:id="@+id/navigation_view_about"
    android:theme="@style/menu_nav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    app:headerLayout="@layout/header_setting"
    app:menu="@menu/setting_menu"/>

</android.support.v4.widget.DrawerLayout>
