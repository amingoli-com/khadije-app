<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
   android:layout_margin="10dp"
    android:background="@drawable/bg_repet"
    tools:context=".Setting">


    <TextView
        android:id="@+id/change_setting"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center"
        android:text="زبان خود را انتخاب کنید"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/farsi_setting"
        android:fontFamily="@font/iransans_bold"
        android:background="@drawable/btn_style"
        android:text="فارسی"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>
    <Button
        android:id="@+id/arabic_setting"
        android:fontFamily="@font/iransans_bold"
        android:background="@drawable/btn_style"
        android:text="العربية"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>
    <Button
        android:id="@+id/english_setting"
        android:fontFamily="@font/iransans_bold"
        android:background="@drawable/btn_style"
        android:text="English"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/about_setting"
        android:fontFamily="@font/iransans_bold"
        android:background="@drawable/btn_style"
        android:text="درباره ما"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>



</LinearLayout>