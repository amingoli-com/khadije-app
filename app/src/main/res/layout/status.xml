<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7"
    tools:context=".status">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/status_true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/paymenT_gif"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/paymenT_title"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#00ae14"
            android:text=""
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/paymenT_cunt"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#00ae14"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />


    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/status_false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/paymenF_gif"
            android:src="@drawable/logo"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/paymenF_title"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#ae0300"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/paymenF_cunt"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#00ae14"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />

    </LinearLayout>


    <Button
        android:visibility="gone"
        android:id="@+id/btn_back_status"
        android:text=""
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>