<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/btn"
                    android:layout_gravity="center"
                    android:src="@drawable/khadije_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_alignParentBottom="true"
                    android:id="@+id/virsioin_hed"
                    android:layout_margin="2dp"
                    android:textColor="#000"
                    android:textSize="8dp"
                    android:text="Version 20"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/header_title"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="-6dp"
                    android:text="Khadije Charity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/header_desc"
                    android:textSize="11dp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="5dp"
                    android:text="Executor of first pilgrimage to the Ahl al-Bayt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/ic_seting"
                        android:tint="#00209e"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/btn_change_lang"
                        android:gravity="bottom"
                        android:textColor="#00209e"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:text="Change language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/btn_close_lang"
                        android:gravity="bottom"
                        android:textColor="#00209e"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:text="بستن"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:id="@+id/set_language"
        android:visibility="gone"
        android:alpha="0"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textColor="#020558"
            android:background="@drawable/btn_style"
            android:id="@+id/header_english"
            android:text="English"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"/>
        <Button
            android:textColor="#020558"
            android:background="@drawable/btn_style"
            android:id="@+id/header_arabic"
            android:text="العربية"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"/>
        <Button
            android:textColor="#020558"
            android:background="@drawable/btn_style"
            android:id="@+id/header_farsi"
            android:text="فارسی"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"/>

    </LinearLayout>








</LinearLayout>